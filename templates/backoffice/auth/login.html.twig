{% extends 'backoffice/base.html.twig' %}
{% block title %}Log in
{% endblock %}
{% block body %}
	<section>
		<div href="{{ path('admin_index') }}" style="display: flex; align-items: center; gap: 15px;margin-left:14px">
			<a class="navbar-brand" href="{{ path('admin_index') }}" style="text-decoration: none; color: #000;">
				<img src="{{ asset('images/logom.png') }}" style="width: 105px; border-radius: 50%;" alt="logo">
			</a>

			<div class="navbar-header" style="font-size: 1.5rem; font-weight: bold;">
				<a class="navbar-brand" href="{{ path('admin_index') }}" style="text-decoration: none; color: green;">
					Restaurant
					<span style="color:red;">Management</span>
				</a>
			</div>
		</div>
		<div class="col-md-9 col-lg-7 col-sm-10 grid-margin stretch-card mt-5 pt-5" style="margin:auto">
			<div class="card">
				<div class="card-body">
					<h4 class="card-title fs-2">Login</h4>
					<p class="card-description">Enter as user</p>

					{# Flash Messages Section #}
					{% for type, messages in app.flashes %}
						{% for message in messages %}
							<div class="alert alert-{{ type == 'error' ? 'danger' : type }} alert-dismissible fade show" role="alert">
								{{ message }}
								<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
							</div>
						{% endfor %}
					{% endfor %}

					<form class="forms-sample" method="POST" action="{{ path('auth_check') }}">
						<div class="form-group row">
							<label for="email" class="col-sm-3 col-form-label">Email</label>
							<div class="col-sm-9">
								<input type="email" class="form-control" id="email" name="email" placeholder="Email" required/>
							</div>
						</div>
						<div class="form-group row">
							<label for="password" class="col-sm-3 col-form-label">Password</label>
							<div class="col-sm-9">
								<input type="password" class="form-control" id="password" name="password" placeholder="Password" required/>
							</div>
						</div>


						<button class="btn btn-light" type="reset">Cancel</button>
						<button type="submit" style='background-color:red;' class="btn btn-primary me-2">Log in</button>
					</form>

				</div>
			</div>
		</div>
	</section>
{% endblock %}

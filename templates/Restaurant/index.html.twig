					</div>
					<div class="discount-content p-5">
						<div
							class="row p-4">
							<!-- First Card -->
							{% for meal in mealdiscounts %}
								<div class="col-lg-6 col-sm-12 mb-4">
									<div class="product-details">
										<h1 style='font-size:2.4rem'>{{ meal.name }}</h1>

										<span class="font-weight-bold text-dark">
											{{meal.type }}

										</span>
										<p class="text-success font-weight-bold">Only
											{{ meal.discount.discountprice }}$
											<span class="text-danger font-weight-bold text-decoration-line-through">{{ meal.price }}$</span>
										</p>
										<!-- Calculate and show the discount percentage -->
										{% if meal.discount.remainingDays is defined %}
											<p class="text-warning">({{ meal.discount.remainingDays }}
												days Left)
											</p>
										{% endif %}


										<div class="control">
											<button class="btn">
												<span class="price">{{ meal.discount.discountprice }}
													$</span>
												<span class="shopping-cart">
													<i class="fa fa-shopping-cart" aria-hidden="true"></i>
												</span>
												<a href="#contact" style='text-decoration:none;color:white' class="order-button p-3">Order Now</a>
											</button>
										</div>

			<!--Card -->
			<div class="row">
				{% for meal in meals %}
					<div class="col-md-6 col-xl-3 col-lg-4 mb-3">
						<div class="card">
							<img src="/{{ meal.image }}" alt="{{ meal.name }}" style="height: 290px; object-fit: cover;" class="img-fluid card-img-top">
							<div class="card-block">
								<div class="card-title">
									{% if meal.discount %}
										<span class="flag-discount1">{% set discountPercentage = ((meal.price - meal.discount.discountprice) / meal.price) * 100 %}
											{{ discountPercentage|round(2) }}% Off
											{% if meal.discount.remainingDays is defined %}

												<p class="text-light" style="font-weight:bold">({{ meal.discount.remainingDays }}
													days Left)
												</p>
											</p>
										{% endif %}
									</span>
								{% endif %}
								<h4 class="card-title">{{meal.name }}
									| |
									{{meal.type }}<h4></div>
									<div class="card-text">
										{{meal.description }}
									</div>
									<div class="pl-3">
										{% if meal.discount %}
											<p class='pl-2'>
												<span class="text-success font-weight-bold">only
													{{ meal.discount.discountprice }}$</span>
												<span class="text-danger font-weight-bold text-decoration-line-through">{{ meal.price }}$</span>

											{% else %}
												<span class="font-weight-bold pl-2">{{ meal.price }}$</span>
											{% endif %}

											<a href="#contact" style='text-decoration:none;color:white' class="btn btn-primary order-button p-3">Order Now</a>

										</div>

									</div>
								</div>
							</div>
						{% endfor %}
					</div>
					<!--Card -->

				</div>
			</section>

			<!-- Discounts Start -->

			<section id="works" class="works p-5">
